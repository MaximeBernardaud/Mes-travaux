{% extends 'base.html.twig' %}

{% block title %}Mon Compte - La boutique Française{% endblock %}

{% block content %}
    <h1>Mon Compte</h1>
    {% if is_granted('ROLE_ADMIN') %}
        <small><a href="/admin">Vous êtes un administrateur, accéder au backoffice ?</a></small><br>
    {% endif %}
    {{ app.user.firstname }} bienvenue dans votre compte.<br>
    C'est ici que vous pouvez gérer votre profil.

{#    {{ dump(app.user.firstname) }}#}

    <hr>


    <div class="row">
        <div class="col-md-4">
            <div class="account-item text-center">
                <img src="{{ asset('assets/img/password.png') }}"><br>
                <a href="{{ path('account_password') }}">Modifier mon mot de passe</a>
            </div>
        </div>
        <div class="col-md-4">
            <div class="account-item text-center">
                <img src="{{ asset('assets/img/address.png') }}"><br>
                <a href="{{ path('account_address') }}">Gérer mes adresses</a>
            </div>
        </div>
        <div class="col-md-4">
            <div class="account-item text-center">
                <img src="{{ asset('assets/img/shopping-cart-1.png') }}"><br>
                <a href="{{ path('account_order') }}">Mes commandes</a>
            </div>
        </div>
    </div>

    <hr>
{% endblock %}